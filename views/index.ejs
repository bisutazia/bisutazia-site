<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>⚽ ビスタジア | ピカイチ投票</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+JP">
  <style>
    body {
      font-family: 'Noto Sans JP', sans-serif;
      background: linear-gradient(135deg, #e0f7fa, #ffffff);
      margin: 0;
      padding: 0;
      color: #333;
      text-align: center;
    }
    .header {
      background-color: #0d47a1;
      color: white;
      padding: 1.2rem;
      font-size: 1.6rem;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }
    .container {
      max-width: 700px;
      margin: auto;
      padding: 1rem;
    }
    .league-select button {
      padding: 0.8rem 1.4rem;
      margin: 0.4rem;
      font-size: 1rem;
      border-radius: 8px;
      border: none;
      color: #fff;
      background-color: #00796b;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .league-select button:hover {
      background-color: #004d40;
    }
    .section-title {
      margin-top: 1.5rem;
      font-size: 1.2rem;
      color: #0d47a1;
    }
    .match-card {
      background: white;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      transition: transform 0.3s;
    }
    .match-card:hover {
      transform: translateY(-5px);
    }
    .vote-button {
      display: inline-block;
      margin-top: 0.6rem;
      padding: 0.6rem 1.2rem;
      color: #fff;
      background-color: #e91e63;
      border-radius: 10px;
      text-decoration: none;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }
    .vote-button:hover {
      background-color: #c2185b;
    }
  </style>
</head>
<body>
  <div class="header">⚽ ビスタジア - ピカイチ投票</div>

  <div class="container">
    <div class="league-select">
      <button onclick="showLeague('J1')">J1リーグ</button>
      <button onclick="showLeague('J2')">J2リーグ</button>
      <button onclick="showLeague('J3')">J3リーグ</button>
      <button onclick="showLeague('WE')">WEリーグ</button>
      <button onclick="showLeague('カップ戦')">カップ戦</button>
    </div>

    <div id="matchList"></div>
  </div>

  <script>
    const matchesData = <%- JSON.stringify(matches) %>;

    const container = document.getElementById("matchList");

    function showLeague(leagueName) {
      container.innerHTML = '';

      const leagueData = matchesData[leagueName];
      if (!leagueData) return;

      Object.entries(leagueData).forEach(([section, data]) => {
        const title = document.createElement("h2");
        title.className = 'section-title';
        title.textContent = `${leagueName} ${section}`;
        container.appendChild(title);

        (data.matches || []).forEach(match => {
          const card = document.createElement("div");
          card.className = 'match-card';

          const label = document.createElement("p");
          label.innerHTML = `<strong>${match.home}</strong> vs <strong>${match.away}</strong>`;
          card.appendChild(label);

          const button = document.createElement("a");
          button.href = `/match/${match.id}`;
          button.className = 'vote-button';
          button.textContent = '本日限定！ピカイチに投票する';
          card.appendChild(button);

          container.appendChild(card);
        });
      });
    }
  </script>
</body>
</html>
