<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <title>ピカイチ投票｜SNSサポの一票でヒーローを生む</title>
  <meta name="description" content="SNSから今すぐ1タップ！Jリーグ・WEリーグ全試合“ピカイチ投票”で今日一番輝いた選手を決めよう。サポーターの熱で未来を変える！" />
  <meta property="og:title" content="ピカイチ投票｜SNSから1タップで推しをヒーローに" />
  <meta property="og:description" content="Jリーグサポの一票で“輝いた選手”をピカイチに！SNS時代の120点UX。" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://bisutazia.com/" />
  <meta property="og:image" content="https://bisutazia.com/ogp.png" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="ピカイチ投票 | SNSサポの熱で一番輝いた選手に1タップ投票" />
  <meta name="twitter:description" content="SNSサポーターの一票がヒーローを生む！離脱ゼロUXの“ピカイチ投票”" />
  <meta name="twitter:image" content="https://bisutazia.com/ogp.png" />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet" />
  <style>
    :root {
      --primary: #0366d6;
      --accent: #ffbe16;
      --danger: #ff4949;
      --bg: #f9fafb;
      --card-bg: #fff;
      --text: #222;
      --shadow: 0 2px 24px rgba(0,0,0,0.13);
      --gold: #ffbe16;
      --gold-dark: #b88d0f;
      --gold-light: #ffe28a;
      --glass: rgba(255,255,255,0.8);
    }
    html,body { height:100%; }
    body {
      margin: 0;
      font-family: 'Noto Sans JP',sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height:100vh;
      -webkit-tap-highlight-color:transparent;
      overflow-x:hidden;
      font-size:17px;
    }
    header {
      background: var(--primary);
      color: #fff;
      padding: 0.4rem 0.5rem 0.2rem 0.5rem;
      text-align: left;
      box-shadow: var(--shadow);
      position:sticky; top:0; z-index:11;
      user-select:none;
      display: flex; align-items: center;
      min-height: 45px;
    }
    .logo {
      max-height:28px;
      margin-right: 0.2em;
      margin-top: 0.1em;
      margin-bottom: 0.1em;
      flex-shrink: 0;
    }
    .site-title {
      font-size:1.05em;
      font-weight: bold;
      letter-spacing:0.03em;
      flex:1 1 auto;
      padding-left:0.2em;
    }
    main {
      max-width: 500px;
      margin: 0 auto;
      padding: 0 0.1em 1.3em 0.1em;
      position:relative;
      z-index:1;
    }
    .hero {
      margin-top:4vw;
      margin-bottom: 1.3em;
      padding: 2.2em 0.5em 1.2em 0.5em;
      border-radius: 1.8em;
      text-align: center;
      background: linear-gradient(120deg, var(--primary) 80%, var(--accent) 100%);
      color: #fff;
      box-shadow: var(--shadow);
      position:relative;
      overflow:hidden;
      max-width:500px;
      margin-left:auto; margin-right:auto;
      isolation:isolate;
    }
    .hero h1 {
      font-size: 1.55em;
      margin: 0 0 0.16em 0;
      font-weight: 900;
      letter-spacing:0.03em;
      line-height:1.2;
      text-shadow:0 2px 15px #0366d633, 0 0 16px #ffbe1640;
      z-index:2; position:relative;
      display:inline-block;
      animation: fadeDown .7s cubic-bezier(.7,0,.38,1.22);
    }
    @keyframes fadeDown {
      0% { opacity:0; transform:translateY(-28px) scale(0.96);}
      100% { opacity:1; transform:translateY(0) scale(1);}
    }
    .hero .star-bounce {
      display:inline-block;
      font-size:1.25em;
      margin-left:0.08em;
      animation: pikapika 1.3s cubic-bezier(.77,0,.18,1.14) infinite;
      vertical-align:middle;
      filter:drop-shadow(0 0 10px #ffbe16aa);
    }
    @keyframes pikapika {
      0%,100% { transform:translateY(0) scale(1);}
      15% { transform:translateY(-8px) scale(1.11);}
      30% { transform:translateY(-1px) scale(1.02);}
      50% { transform:translateY(0) scale(1);}
    }
    /* ---- リーグ選択 ---- */
    .leagues-bar {
      display: flex;
      gap: 0.7em;
      justify-content: center;
      align-items: center;
      margin: 1.1em 0 0.5em 0;
      padding: 0;
      width: 100%;
      flex-wrap: wrap;
      z-index:3;
      animation: fadeDown .7s .06s both cubic-bezier(.73,0,.2,1.18);
    }
    .leagues-bar button {
      flex:1 1 80px;
      min-width: 78px;
      background: linear-gradient(90deg,var(--gold) 60%,var(--gold-light) 100%);
      color: var(--primary);
      border: none;
      border-radius: 99px;
      font-size: 1.02em;
      font-weight: bold;
      padding: 0.66em 1.1em;
      margin: 0.13em 0;
      cursor: pointer;
      transition: background 0.15s, color 0.14s, box-shadow 0.15s;
      box-shadow:0 2px 8px #ffe06633;
      letter-spacing:0.02em;
      outline:none;
    }
    .leagues-bar button.active, .leagues-bar button:active, .leagues-bar button:focus {
      background:linear-gradient(90deg,#fffbe6 60%,var(--gold) 100%);
      color: var(--gold-dark);
      box-shadow:0 0 18px #ffe06688;
      border:2.5px solid var(--gold-dark);
    }
    .hero p {
      margin: 0.8em 0 1.15em 0;
      font-size: 1.13em;
      line-height:1.65;
      font-weight:500;
      z-index:2; position:relative;
      animation: fadeDown .7s .09s both cubic-bezier(.73,0,.2,1.18);
      letter-spacing:0.01em;
    }
    .timer {
      display: inline-block;
      background: var(--accent);
      color: var(--primary);
      font-size:1em;
      font-weight:bold;
      border-radius:8px;
      padding:0.34em 0.88em;
      margin-bottom: 1em;
      margin-top: 0.19em;
      box-shadow:0 0 12px #ffe0661a;
      letter-spacing:0.01em;
      animation: fadeDown .7s .16s both cubic-bezier(.73,0,.2,1.18);
    }
    /* ---- CTA ---- */
    .cta-btn {
      display: block;
      width: 100%;
      background: linear-gradient(90deg,var(--accent) 65%,#fff1c0 100%);
      color: var(--primary);
      font-size: 1.22em;
      font-weight: 900;
      padding: 1.1em 0;
      border: none;
      border-radius: 99px;
      margin-top: 0.7em;
      margin-bottom: 0.09em;
      box-shadow: 0 5px 19px #ffe06630;
      transition: background 0.13s, color 0.13s, box-shadow 0.14s, transform 0.11s;
      letter-spacing: 0.02em;
      cursor:pointer;
      position:relative;
      overflow:hidden;
      animation: ctaPop .7s .23s both cubic-bezier(.77,0,.18,1.14);
      will-change:transform,box-shadow;
    }
    .cta-btn .star {
      display:inline-block;
      vertical-align:middle;
      margin-left:0.07em;
      animation: pikapika 1.7s cubic-bezier(.77,0,.18,1.14) infinite;
      filter:drop-shadow(0 0 10px #ffe066cc);
    }
    .cta-btn:active,.cta-btn:hover {
      background:linear-gradient(90deg,#ffe066 70%,#fffbe6 100%);
      color: var(--primary);
      transform: scale(1.04);
      box-shadow:0 0 21px #ffe066bb;
    }
    @keyframes ctaPop {
      0% { opacity:0; transform:scale(.97);}
      70% { opacity:.7; transform:scale(1.07);}
      100% { opacity:1; transform:scale(1);}
    }
    .catch-nudge {
      margin: 1.18em auto 0.31em;
      background: var(--glass);
      color: var(--primary);
      font-size: 1.08em;
      border-left: 7px solid var(--accent);
      padding: 0.8em 1.18em;
      border-radius: 12px;
      font-weight: bold;
      box-shadow:0 2px 14px rgba(0,0,0,0.03);
      line-height:1.5;
      text-align:center;
      max-width:470px;
      animation: fadeDown .7s .33s both cubic-bezier(.73,0,.2,1.18);
      isolation:isolate;
    }
    .match-list {
      margin: 1.2em 0 0 0;
      display: flex;
      flex-direction: column;
      gap: 1.02em;
      animation: fadeDown .7s .41s both cubic-bezier(.73,0,.2,1.18);
    }
    .match-card {
      background: var(--card-bg);
      border-radius: 1.08em;
      box-shadow: 0 3px 20px rgba(0,0,0,0.09);
      padding: 1.02em 0.5em 0.7em;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      border-left: 6px solid var(--primary);
      position:relative;
      overflow:hidden;
      animation: cardPop .7s cubic-bezier(.68,-0.55,.27,1.55) both;
      will-change:transform,box-shadow;
      transition:box-shadow 0.14s,transform 0.13s;
    }
    @keyframes cardPop {
      0% {opacity:0;transform:scale(0.93);}
      100% {opacity:1;transform:scale(1);}
    }
    .match-card h3 {
      font-size: 1.11em;
      color: var(--primary);
      margin: 0.21em 0 0.35em;
      font-weight: bold;
      letter-spacing:0.01em;
      text-shadow:0 1px 7px #ffbe1630;
    }
    .match-card .vote-btn {
      background: linear-gradient(90deg,var(--accent) 65%,#fffbe6 100%);
      color: var(--primary);
      border: none;
      border-radius: 99px;
      padding: 0.97em 0;
      width: 97%;
      font-size: 1.09em;
      font-weight: 900;
      margin: 0.56em 0 0.1em 0;
      cursor: pointer;
      transition: background 0.12s, color 0.12s, box-shadow 0.11s, transform 0.13s;
      box-shadow:0 2px 8px #ffe06651;
      position:relative;
      overflow:hidden;
      letter-spacing:0.015em;
      animation: ctaPop .7s .51s both;
      will-change:transform,box-shadow;
    }
    .match-card .vote-btn .star {
      display:inline-block; vertical-align:middle; margin-left:0.07em;
      animation: pikapika 1.6s cubic-bezier(.77,0,.18,1.14) infinite;
    }
    .match-card .vote-btn:active,.match-card .vote-btn:hover {
      background:linear-gradient(90deg,#ffe066 75%,#fffbe6 100%);
      color: var(--primary);
      transform:scale(1.04);
      box-shadow:0 0 17px #ffe06699;
    }
    .info-tip {
      font-size: 0.97em;
      color: #555;
      margin: 1.03em 0 0.28em 0;
      text-align: center;
      animation: fadeDown .7s .69s both cubic-bezier(.73,0,.2,1.18);
    }
    /* レスポンシブ */
    @media (max-width:480px){
      body { font-size:15.7px;}
      header { padding:0.22rem 0.18rem 0.11rem 0.16rem;}
      .logo { max-height:23px;}
      .hero{padding:1.26em 0.08em 0.68em;}
      .leagues-bar button{min-width:61px; font-size:1em;}
      .match-card{padding:0.49em 0.03em 0.65em;}
    }
  </style>
</head>
<body>
  <header>
    <img src="/logo.png" alt="ビスタジア ロゴ" class="logo" />
    <span class="site-title">ビスタジア</span>
  </header>
  <main>
    <section class="hero">
      <h1>
        ピカイチ投票 <span class="star-bounce">✨</span>
      </h1>
      <div class="leagues-bar" id="leagues">
        <button id="J1" onclick="showLeague('J1')">J1</button>
        <button id="J2" onclick="showLeague('J2')">J2</button>
        <button id="J3" onclick="showLeague('J3')">J3</button>
        <button id="WE" onclick="showLeague('WE')">WE</button>
        <button id="ルヴァンカップ" onclick="showLeague('ルヴァンカップ')">ルヴァン杯</button>
        <button id="その他" onclick="showLeague('その他')">その他</button>
      </div>
      <p>
        SNSで盛り上がった今、<b>一番輝いた選手</b>に投票しよう！<br>
        <span style="color:#fff;">“あなたの1票”がヒーローを生む。</span><br>
        投票は今だけ・1タップで完了。Jリーグ/WEリーグ全対応。
      </p>
      <div class="timer" id="voteTimer">本日の投票 締切まで残り --時間--分</div>
      <button class="cta-btn" onclick="scrollToList()">
        ピカイチ投票する <span class="star">✨</span>
      </button>
    </section>
    <div class="catch-nudge">
      あなたの投票で“公式化”に近づく。<br>
      サポーターの熱が、サッカー界を動かす！
    </div>
    <div class="match-list" id="matchList"></div>
    <div class="info-tip">
      投票後は <b>#ピカイチ投票 #ビスタジア</b> で<br>
      SNS拡散も大歓迎！
    </div>
  </main>
  <footer>
    非公式プロジェクトです（Jリーグ公式化を目指して運営中）<br>
    &copy; <script>document.write(new Date().getFullYear())</script> ビスタジア
  </footer>
  <script>
    // matches: { J1: { 節: { matches:[{id,home,away}] } }, ... }
    const matchesData = <%- JSON.stringify(matches) %>;
    // リーグ切り替え
    function showLeague(league) {
      document.querySelectorAll('.leagues-bar button').forEach(btn=>btn.classList.remove('active'));
      if(document.getElementById(league))document.getElementById(league).classList.add('active');
      const list = document.getElementById('matchList');
      list.innerHTML = '';
      if (league === 'その他') {
        window.location.href = '/match/other';
        return;
      }
      const secData = matchesData[league] || {};
      Object.entries(secData).forEach(([section, data]) => {
        data.matches.forEach(m => {
          const card = document.createElement('div');
          card.className = 'match-card';
          card.innerHTML = `
            <h3>${m.home} vs ${m.away}</h3>
            <button class="vote-btn" onclick="location.href='/match/${m.id}'">
              ピカイチ投票 <span class="star">✨</span>
            </button>
          `;
          list.appendChild(card);
        });
      });
      setTimeout(scrollToList, 0);
    }
    function scrollToList(){
      const list=document.getElementById('matchList');
      if(list){
        list.scrollIntoView({behavior:'smooth', block:'start'});
      }
    }
    function updateTimer(){
      const now = new Date();
      const close = new Date();
      close.setHours(23,59,59,999);
      const diff = close-now;
      if(diff>0){
        const h = String(Math.floor(diff/3600000)).padStart(2,"0");
        const m = String(Math.floor((diff%3600000)/60000)).padStart(2,"0");
        document.getElementById('voteTimer').textContent =
          `本日の投票 締切まで残り ${h}時間${m}分`;
      }else{
        document.getElementById('voteTimer').textContent = "本日の投票は締切ました";
      }
    }
    setInterval(updateTimer,1000); updateTimer();

    // SNS流入時リーグ指定パラメータ
    function getSNSLeague(){
      const u = new URL(window.location.href);
      return u.searchParams.get("league") || "J1";
    }
    window.onload = () => {
      showLeague(getSNSLeague());
    };
  </script>
</body>
</html>
