<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ビスタジア | ピカイチ投票</title>
  <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP" rel="stylesheet" />
  <style>
    body {
      font-family: 'Noto Sans JP', sans-serif;
      background: #f2f7fc;
      color: #333;
      padding: 0;
      margin: 0;
      text-align: center;
    }
    .header {
      background-color: #004c99;
      color: white;
      padding: 1.5rem 0;
      font-size: 1.8rem;
      font-weight: bold;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    .container {
      max-width: 800px;
      margin: auto;
      padding: 1rem;
    }
    .league-buttons button {
      background: #ff5722;
      color: white;
      font-size: 1rem;
      padding: 0.8rem 1.5rem;
      margin: 0.3rem;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      box-shadow: 0 3px 6px rgba(0,0,0,0.2);
    }
    .match-card {
      background: #fff;
      border-radius: 12px;
      padding: 1rem;
      margin-top: 1rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }
    .match-card:hover {
      transform: translateY(-3px);
    }
    .vote-button {
      display: inline-block;
      margin-top: 0.6rem;
      background: #28a745;
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 10px;
      text-decoration: none;
      font-weight: bold;
    }
    h2 {
      margin-top: 1.5rem;
      color: #114488;
    }
  </style>
</head>
<body>
  <div class="header">⚽ ビスタジア</div>

  <div class="container">
    <div class="league-buttons">
      <button onclick="showLeague('J1')">J1リーグ</button>
      <button onclick="showLeague('J2')">J2リーグ</button>
      <button onclick="showLeague('J3')">J3リーグ</button>
      <button onclick="showLeague('WE')">WEリーグ</button>
      <button onclick="showLeague('カップ戦')">カップ戦</button>
    </div>

    <div id="matchList"></div>
  </div>

  <script>
    const matchesData = <%- JSON.stringify(matches) %>;

    function showLeague(leagueName) {
      const container = document.getElementById("matchList");
      container.innerHTML = "";

      const league = matchesData[leagueName];
      if (!league) {
        container.innerHTML = "<p>現在このリーグの試合情報はありません。</p>";
        return;
      }

      Object.entries(league).forEach(([sectionName, sectionData]) => {
        const sectionTitle = document.createElement("h2");
        sectionTitle.textContent = `${leagueName} ${sectionName}`;
        container.appendChild(sectionTitle);

        if (sectionData.matches && sectionData.matches.length > 0) {
          sectionData.matches.forEach(match => {
            const card = document.createElement("div");
            card.className = "match-card";

            const title = document.createElement("h3");
            title.textContent = `${match.home} vs ${match.away}`;
            card.appendChild(title);

            const button = document.createElement("a");
            button.href = `/match/${match.id}`;
            button.className = "vote-button";
            button.textContent = "ピカイチに投票する";
            card.appendChild(button);

            container.appendChild(card);
          });
        } else {
          const noMatch = document.createElement("p");
          noMatch.textContent = "現在この節の試合は登録されていません。";
          container.appendChild(noMatch);
        }
      });
    }
  </script>
</body>
</html>
